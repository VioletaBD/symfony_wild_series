{% extends 'base.html.twig' %}

{% block title %}Seasons :{% endblock %}
{% block navbar %}
    {% include './_navbar.html.twig' %}
{% endblock %}
{% block body %}

    <h3 class="p-4 container-fluid text-center">{{ program.title }}</h3>
    <div class="m-3>
        <h3>Liste des épisodes :</h3>
        <div class="row">
        {% if season.episodes is not empty %}
            {% for episode in season.episodes %}
                <div class="col-12">
                    <div class="bg-light p-2">
                        <h4>{{ episode.title }}</h4>
                        <p>{{ episode.synopsis }}<p>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div>Désolé, il n'y a pas encore d'épisodes publiés.</div>
        {% endif %}
        </div>
    </div>  


{% endblock %}