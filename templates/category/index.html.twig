{% extends 'base.html.twig' %}

{% block title %}Wild Series{% endblock %}
{% block navbar %}
    {% include './_navbar.html.twig' %}
{% endblock %}

{% block body %}
    <h1>Toutes les categories de la table category : </h1>
    {% for category in categories %}
        <div>
            <h2>{{ loop.index }} / {{ program.category.name }} - Programs : {{ program.title }}</h2>
             <a href="{{ path("category_show", { id: category.id }) }}">Voir la fiche</a>
        </div>
    {% else %}
        Aucune category trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}
